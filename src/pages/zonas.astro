---
import Layout from "@/layouts/Layout.astro";
import locations from "@/data/locations.json";
import SectionCTA from "@/components/SectionCTA.astro";
import { url } from "@/utils/paths";
---

<Layout
  seo={{
    title: "Zonas de Retiro — Concepción, Biobío y Ñuble | Exportandes",
    description: "Retiramos chatarra a domicilio en Concepción, Talcahuano, San Pedro, Chillán, Los Ángeles y Coronel. Sin costo de retiro.",
    keywords: [
      "retiro chatarra Concepción",
      "retiro metales Biobío",
      "compra chatarra a domicilio",
    ],
  }}
>
  <!-- Header -->
  <section class="relative pt-32 pb-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="font-display font-extrabold text-4xl sm:text-5xl md:text-6xl text-gray-900">
        Zonas de retiro
      </h1>
      <p class="mt-6 text-xl text-gray-500 max-w-2xl mx-auto">
        Cubrimos Concepción, la región del Biobío y Ñuble. Retiro a domicilio sin costo mínimo.
      </p>
    </div>
  </section>

  <!-- Map placeholder + Location grid -->
  <section class="relative pb-24 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Map embed -->
      <div class="mb-12 rounded-2xl overflow-hidden border border-gray-200 shadow-sm">
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d102240.3684756483!2d-73.13!3d-36.83!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x966b5f4cb7a885e7%3A0x2bc2e1e1b5bafcd6!2sConcepc%C3%B3n%2C%20B%C3%ADo%20B%C3%ADo%2C%20Chile!5e0!3m2!1ses!2scl!4v1"
          width="100%"
          height="400"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
          title="Mapa de zonas de retiro - Región del Biobío"
          class="w-full"
        ></iframe>
      </div>

      <!-- Location cards -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {locations.map((loc) => (
          <a
            href={url(`vender-chatarra-${loc.slug}`)}
            class="group bg-white rounded-2xl border border-gray-100 shadow-sm p-6 hover:shadow-md hover:border-blue-200 transition-all duration-300"
          >
            <div class="flex items-center gap-3 mb-3">
              <div class="w-10 h-10 rounded-lg bg-blue-50 border border-blue-200 flex items-center justify-center group-hover:bg-blue-100 transition-colors">
                <svg class="w-5 h-5 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 0115 0z" />
                </svg>
              </div>
              <div>
                <h2 class="font-display font-bold text-lg text-gray-900 group-hover:text-blue-600 transition-colors">{loc.name}</h2>
                <span class="text-xs text-gray-400">{loc.region}</span>
              </div>
            </div>
            <p class="text-sm text-gray-500 leading-relaxed">{loc.description}</p>
            <span class="inline-flex items-center gap-1 mt-4 text-sm font-medium text-blue-600 group-hover:gap-2 transition-all duration-200">
              Ver detalles
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
              </svg>
            </span>
          </a>
        ))}
      </div>

      <!-- Our address -->
      <div class="mt-16 bg-white rounded-2xl border border-gray-100 shadow-sm p-8 text-center">
        <h3 class="font-display font-bold text-2xl text-gray-900 mb-2">Nuestra sede</h3>
        <p class="text-gray-600 text-lg">Av. Pedro de Valdivia 733, Concepción</p>
        <p class="text-gray-400 text-sm mt-2">Lunes a Viernes: 08:30 - 18:00 | Sábado: 09:00 - 13:00</p>
      </div>
    </div>
  </section>

  <SectionCTA />
</Layout>
