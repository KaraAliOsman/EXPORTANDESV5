---
import Layout from "@/layouts/Layout.astro";
import Hero from "@/components/Hero.astro";
import PriceTable from "@/components/PriceTable.astro";
import TrustSection from "@/components/TrustSection.astro";
import ProcessTimeline from "@/components/ProcessTimeline.astro";
import SectionCTA from "@/components/SectionCTA.astro";
import { url } from "@/utils/paths";
import heroImage from "@/assets/hero (1).webp";
---

<Layout
  seo={{
    title: "Exportandes — Compramos tu Chatarra al Mejor Precio | Concepción & Biobío",
    description: "Compramos cobre, aluminio y chatarra al mejor precio en Concepción y Biobío. Retiro gratis, pago inmediato. Cotiza por WhatsApp.",
    keywords: [
      "vender chatarra Concepción",
      "vender cobre Concepción",
      "precio aluminio Biobío",
      "compra chatarra Biobío",
      "reciclaje metales Concepción",
    ],
  }}
>
  <!-- Hero -->
  <Hero
    title="Compramos tu chatarra al mejor precio."
    subtitle="Especialistas en aluminio y cobre — Concepción y Biobío. Retiro gratis y pago al instante."
    ctaText="Cotizar ahora"
    ctaHref={url("vender")}
    image={heroImage.src}
  />

  <!-- Price Table -->
  <PriceTable />

  <!-- Trust / Benefits -->
  <TrustSection />

  <!-- Process Timeline -->
  <ProcessTimeline />

  <!-- Final CTA -->
  <SectionCTA />
</Layout>
