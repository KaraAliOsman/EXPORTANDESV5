---
import Layout from "@/layouts/Layout.astro";
import { url } from "@/utils/paths";

const posts = [
  {
    slug: "precio-cobre-chile-2026",
    title: "Precio del Cobre en Chile 2026: ¿Cuánto vale un kilo?",
    excerpt: "Análisis actualizado del precio del cobre por kilo en Chile. Factores que influyen en el precio y cómo obtener la mejor cotización.",
    date: "2026-02-10",
    image: "https://images.unsplash.com/photo-1605557202138-f778ef9ebf96?w=800&q=60&auto=format",
    readTime: "5 min",
  },
  {
    slug: "como-limpiar-aluminio-para-vender",
    title: "Cómo limpiar aluminio para vender: Guía práctica",
    excerpt: "Tips para preparar tu aluminio antes de vender y obtener un mejor precio por kilo. Tipos de aluminio y cómo clasificarlos.",
    date: "2026-02-05",
    image: "https://images.unsplash.com/photo-1558618666-fcd25c85f82e?w=800&q=60&auto=format",
    readTime: "4 min",
  },
  {
    slug: "chatarra-electronica-que-se-puede-vender",
    title: "Chatarra electrónica: ¿Qué se puede vender y a cuánto?",
    excerpt: "Descubre qué componentes electrónicos tienen valor como chatarra, cuáles contienen metales preciosos y cómo venderlos.",
    date: "2026-01-28",
    image: "https://images.unsplash.com/photo-1518770660439-4636190af475?w=800&q=60&auto=format",
    readTime: "6 min",
  },
  {
    slug: "diferencia-cobre-bronce-laton",
    title: "Diferencia entre Cobre, Bronce y Latón: Guía visual",
    excerpt: "Aprende a identificar y diferenciar cobre, bronce y latón para clasificar correctamente tu chatarra y obtener mejor precio.",
    date: "2026-01-20",
    image: "https://images.unsplash.com/photo-1587293852726-70cdb56c2866?w=800&q=60&auto=format",
    readTime: "4 min",
  },
];
---

<Layout
  seo={{
    title: "Blog — Reciclaje de Metales y Chatarra | Exportandes",
    description: "Artículos sobre precios de metales, tips de reciclaje, y guías para vender tu chatarra en Chile.",
    keywords: ["blog reciclaje metales", "precio cobre Chile", "vender chatarra tips"],
  }}
>
  <!-- Header -->
  <section class="relative pt-32 pb-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="font-display font-extrabold text-4xl sm:text-5xl md:text-6xl text-gray-900">
        Blog
      </h1>
      <p class="mt-6 text-xl text-gray-500 max-w-2xl mx-auto">
        Guías, tips y análisis sobre reciclaje de metales y chatarra en Chile.
      </p>
    </div>
  </section>

  <!-- Posts grid -->
  <section class="relative pb-24 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {posts.map((post, i) => (
          <a
            href={url(`blog/${post.slug}`)}
            class:list={[
              "group bg-white rounded-2xl border border-gray-100 shadow-sm overflow-hidden hover:shadow-md hover:border-gray-200 transition-all duration-300",
              i === 0 && "md:col-span-2",
            ]}
          >
            <div class:list={["relative overflow-hidden", i === 0 ? "h-64 md:h-80" : "h-48"]}>
              <img
                src={post.image}
                alt={post.title}
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                loading="lazy"
              />
            </div>
            <div class="p-6 md:p-8">
              <div class="flex items-center gap-3 text-sm text-gray-400 mb-3">
                <time datetime={post.date}>
                  {new Date(post.date).toLocaleDateString("es-CL", { year: "numeric", month: "long", day: "numeric" })}
                </time>
                <span>·</span>
                <span>{post.readTime} lectura</span>
              </div>
              <h2 class:list={["font-display font-bold text-gray-900 group-hover:text-blue-600 transition-colors", i === 0 ? "text-2xl md:text-3xl" : "text-xl"]}>
                {post.title}
              </h2>
              <p class="mt-3 text-gray-500 leading-relaxed">{post.excerpt}</p>
              <span class="inline-flex items-center gap-1 mt-4 text-sm font-medium text-blue-600 group-hover:gap-2 transition-all duration-200">
                Leer artículo
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
                </svg>
              </span>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>
</Layout>
