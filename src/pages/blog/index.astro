      <p class="mt-4 text-lg text-gray-500 max-w-2xl mx-auto">
        Guias, tips y analisis sobre reciclaje de metales y chatarra en Chile.
      </p>
    </div>
  </section>

  <!-- Featured post -->
  <section class="py-8 sm:py-12">
    <div class="max-w-7xl mx-auto px-5 sm:px-8">
      <a href={url(`blog/${posts[0].slug}`)} class="group block bg-white rounded-2xl border border-gray-100 shadow-sm overflow-hidden hover:shadow-md transition-shadow">
        <div class="grid grid-cols-1 md:grid-cols-2">
          <div class="relative h-48 sm:h-64 md:h-auto">
            <img src={posts[0].image} alt={posts[0].title} class="w-full h-full object-cover group-hover:scale-[1.02] transition-transform duration-500" loading="lazy"/>
          </div>
          <div class="p-6 sm:p-10 flex flex-col justify-center">
            <div class="flex items-center gap-3 text-sm text-gray-400 mb-3">
              <time>{new Date(posts[0].date).toLocaleDateString("es-CL", { year: "numeric", month: "long", day: "numeric" })}</time>
              <span>·</span><span>{posts[0].readTime} lectura</span>
            </div>
            <h2 class="text-xl sm:text-2xl font-extrabold text-gray-900 group-hover:text-brand-teal transition-colors mb-3">{posts[0].title}</h2>
            <p class="text-gray-500 leading-relaxed mb-4">{posts[0].excerpt}</p>
            <span class="text-sm font-semibold text-brand-teal">Leer articulo &rarr;</span>
          </div>
        </div>
      </a>
    </div>
  </section>

  <!-- Posts grid -->
  <section class="pb-16 sm:pb-24">
    <div class="max-w-7xl mx-auto px-5 sm:px-8">
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {posts.slice(1).map((post) => (
          <a href={url(`blog/${post.slug}`)} class="group bg-white rounded-2xl border border-gray-100 shadow-sm overflow-hidden hover:shadow-md transition-shadow">
            <div class="relative h-40 sm:h-48 overflow-hidden">
              <img src={post.image} alt={post.title} class="w-full h-full object-cover group-hover:scale-[1.02] transition-transform duration-500" loading="lazy"/>
            </div>
            <div class="p-5 sm:p-6">
              <div class="flex items-center gap-2 text-xs text-gray-400 mb-2">
                <time>{new Date(post.date).toLocaleDateString("es-CL", { year: "numeric", month: "short", day: "numeric" })}</time>
                <span>·</span><span>{post.readTime}</span>
              </div>
              <h2 class="font-bold text-gray-900 group-hover:text-brand-teal transition-colors mb-2 line-clamp-2">{post.title}</h2>
              <p class="text-sm text-gray-500 line-clamp-2">{post.excerpt}</p>
            </div>
