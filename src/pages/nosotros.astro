---
import Layout from "@/layouts/Layout.astro";
import SectionCTA from "@/components/SectionCTA.astro";
---

<Layout
  seo={{
    title: "Nosotros — Quiénes Somos | Exportandes",
    description: "Conoce a Exportandes, empresa de compra de chatarra y metales en Concepción, Biobío. Más de 10 años de experiencia en reciclaje.",
    keywords: ["Exportandes", "empresa reciclaje Concepción", "compra chatarra Biobío"],
  }}
>
  <!-- Hero -->
  <section class="relative pt-32 pb-20">
    <div class="absolute inset-0">
      <img
        src="https://images.unsplash.com/photo-1587293852726-70cdb56c2866?w=1920&q=40&auto=format"
        alt=""
        class="w-full h-full object-cover opacity-20"
        loading="eager"
      />
      <div class="absolute inset-0 bg-gradient-to-b from-slate-950 via-slate-950/90 to-slate-950"></div>
    </div>
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl">
        <span class="inline-block px-4 py-1.5 mb-6 text-xs font-semibold tracking-widest uppercase text-brand-blue bg-brand-blue/10 border border-brand-blue/20 rounded-full">
          Nuestra historia
        </span>
        <h1 class="font-display font-extrabold text-4xl sm:text-5xl md:text-6xl text-white leading-tight">
          Más que reciclaje: <br />compromiso con la región.
        </h1>
        <p class="mt-6 text-xl text-slate-400 leading-relaxed">
          Exportandes nació con la misión de profesionalizar la compra de metales y chatarra en la región del Biobío. Ofrecemos un trato justo, transparente y eficiente a cada cliente.
        </p>
      </div>
    </div>
  </section>

  <!-- Values -->
  <section class="relative py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {[
          {
            title: "Transparencia",
            desc: "Pesaje certificado a la vista. Mostramos cada paso del proceso para que confíes en nosotros.",
            icon: "M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z M15 12a3 3 0 11-6 0 3 3 0 016 0z",
          },
          {
            title: "Compromiso ambiental",
            desc: "Cada kilo de metal que reciclamos es un kilo menos en vertederos. Contribuimos a la economía circular.",
            icon: "M12.75 3.03v.568c0 .334.148.65.405.864l1.068.89c.442.369.535 1.01.216 1.49l-.51.766a2.25 2.25 0 01-1.161.886l-.143.048a1.107 1.107 0 00-.57 1.664c.369.555.169 1.307-.427 1.605L9 13.125l.423 1.059a.956.956 0 01-1.652.928l-.679-.906a1.125 1.125 0 00-1.906.172L4.5 15.75l-.612.153M12.75 3.031a9 9 0 00-8.862 12.872M12.75 3.031a9 9 0 016.69 14.036m0 0l-.177-.529A2.25 2.25 0 0017.128 15H16.5l-.324-.324a1.453 1.453 0 00-2.328.377l-.036.073a1.586 1.586 0 01-.982.816l-.99.282c-.55.157-.894.702-.8 1.267l.073.438c.08.474.49.821.97.821.846 0 1.598.542 1.865 1.345l.215.643m5.276-3.67a9.012 9.012 0 01-5.276 3.67",
          },
          {
            title: "Servicio regional",
            desc: "Sede en Concepción con cobertura en Biobío y Ñuble. Retiro a domicilio sin costo.",
            icon: "M15 10.5a3 3 0 11-6 0 3 3 0 016 0z M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 0115 0z",
          },
        ].map((value) => (
          <div class="backdrop-blur-md bg-white/5 border border-white/10 rounded-2xl p-8 hover:bg-white/[0.07] transition-all duration-300">
            <svg class="w-8 h-8 text-brand-blue mb-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d={value.icon} />
            </svg>
            <h3 class="font-display font-bold text-xl text-white mb-3">{value.title}</h3>
            <p class="text-slate-400 leading-relaxed">{value.desc}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Stats -->
  <section class="relative py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="backdrop-blur-md bg-white/5 border border-white/10 rounded-2xl p-10">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
          {[
            { value: "+10", label: "Años de experiencia" },
            { value: "+5.000", label: "Clientes atendidos" },
            { value: "+800", label: "Toneladas recicladas" },
            { value: "6", label: "Comunas de cobertura" },
          ].map((stat) => (
            <div>
              <p class="font-display font-extrabold text-4xl md:text-5xl text-brand-blue">{stat.value}</p>
              <p class="mt-2 text-sm text-slate-400">{stat.label}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <SectionCTA />
</Layout>
