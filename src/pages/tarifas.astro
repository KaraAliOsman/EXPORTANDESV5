---
import Layout from "@/layouts/Layout.astro";
import priceData from "@/data/prices.json";
import { createWhatsAppLink, formatPrice, getTrendIcon } from "@/utils/whatsapp";
import SectionCTA from "@/components/SectionCTA.astro";
import { url } from "@/utils/paths";
---

<Layout
  seo={{
    title: "Tarifas y Precios por Kilo — Cobre, Aluminio, Fierro, Bronce | Exportandes",
    description: "Consulta nuestras tarifas actualizadas. Precio por kilo de cobre, aluminio, fierro, bronce y más en Concepción y Biobío.",
    keywords: [
      "precio cobre kilo Chile",
      "precio aluminio kilo",
      "tarifa chatarra Concepción",
      "precio fierro kilo",
      "precio bronce kilo",
    ],
  }}
>
  <!-- Header -->
  <section class="relative pt-28 sm:pt-32 pb-12 sm:pb-16">
    <div class="absolute inset-0">
      <img
        src="https://images.unsplash.com/photo-1558618666-fcd25c85f82e?w=1920&q=40&auto=format"
        alt=""
        class="w-full h-full object-cover opacity-15"
        loading="eager"
      />
      <div class="absolute inset-0 bg-gradient-to-b from-slate-950 via-slate-950/95 to-slate-950"></div>
    </div>
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="font-display font-extrabold text-3xl sm:text-5xl md:text-6xl text-white">
        Tarifas actualizadas
      </h1>
      <p class="mt-4 sm:mt-6 text-base sm:text-xl text-slate-400 max-w-2xl mx-auto">
        Precios referenciales por kilo. Cotización final sujeta a inspección y calidad del material.
      </p>
    </div>
  </section>

  <!-- Categories -->
  {priceData.categories.map((category) => (
    <section class="relative pb-12 sm:pb-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Category header -->
        <div class="mb-6 sm:mb-8">
          <h2 class="font-display font-extrabold text-xl sm:text-3xl text-white">{category.name}</h2>
          <p class="mt-1 sm:mt-2 text-sm text-slate-400">{category.description}</p>
        </div>

        <!-- Price table - glass panel -->
        <div class="backdrop-blur-md bg-white/[0.03] border border-white/10 rounded-2xl shadow-2xl overflow-hidden">
          <!-- Table header (desktop) -->
          <div class="hidden md:grid md:grid-cols-12 gap-4 px-6 py-3 bg-white/[0.03] border-b border-white/5 text-xs font-semibold tracking-widest uppercase text-slate-400">
            <div class="col-span-3">Material</div>
            <div class="col-span-3">Detalle</div>
            <div class="col-span-2 text-right">Precio/kg</div>
            <div class="col-span-1 text-center">Tend.</div>
            <div class="col-span-3 text-right">Acción</div>
          </div>

          <!-- Rows -->
          {category.items.map((item, index) => {
            const trend = getTrendIcon(item.trend);
            const waLink = createWhatsAppLink(item.name, "", "Concepción");
            const isConsult = "consultPrice" in item && item.consultPrice;
            return (
              <div
                class:list={[
                  "grid grid-cols-1 md:grid-cols-12 gap-1 md:gap-4 items-center px-4 sm:px-6 py-3.5 sm:py-4 transition-colors hover:bg-white/[0.03]",
                  index < category.items.length - 1 && "border-b border-white/5",
                ]}
              >
                <!-- Material name -->
                <div class="md:col-span-3">
                  <p class="font-semibold text-sm sm:text-base text-white">{item.name}</p>
                </div>
                <!-- Description -->
                <div class="md:col-span-3">
                  <p class="text-xs sm:text-sm text-slate-400">{item.description}</p>
                </div>
                <!-- Price -->
                <div class="md:col-span-2 md:text-right mt-1 md:mt-0">
                  {isConsult ? (
                    <span class="text-base sm:text-lg font-bold text-brand-blue">Consultar</span>
                  ) : (
                    <span class="text-lg sm:text-xl font-bold text-white tabular-nums">
                      {formatPrice(item.price)}<span class="text-xs sm:text-sm text-slate-400 ml-1">/{item.unit}</span>
                    </span>
                  )}
                </div>
                <!-- Trend -->
                <div class="hidden md:block md:col-span-1 md:text-center">
                  <span class:list={["text-sm font-medium", trend.color]}>
                    {trend.icon}
                  </span>
                </div>
                <!-- Action -->
                <div class="md:col-span-3 md:text-right mt-2 md:mt-0">
                  <a
                    href={waLink}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center gap-1.5 px-3 py-1.5 sm:px-4 sm:py-2 bg-brand-green/10 border border-brand-green/20 text-brand-green hover:bg-brand-green hover:text-white font-semibold text-xs sm:text-sm rounded-full transition-all duration-200"
                  >
                    <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347z"/>
                    </svg>
                    Cotizar
                  </a>
                </div>
              </div>
            );
          })}
        </div>
      </div>
    </section>
  ))}

  <!-- Disclaimers -->
  <section class="relative pb-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="backdrop-blur-md bg-white/[0.03] border border-white/10 rounded-2xl p-5 sm:p-8">
        <h3 class="font-display font-bold text-lg text-white mb-4">Información Importante</h3>
        <ul class="space-y-2">
          {priceData.disclaimers.map((d) => (
            <li class="flex items-start gap-2 text-xs sm:text-sm text-slate-400">
              <span class="text-brand-blue mt-0.5">•</span>
              {d}
            </li>
          ))}
          <li class="flex items-start gap-2 text-xs sm:text-sm text-slate-400">
            <span class="text-brand-blue mt-0.5">•</span>
            Última actualización: {priceData.lastUpdated}
          </li>
        </ul>
      </div>

      <!-- Material category links -->
      <div class="mt-8 grid grid-cols-2 sm:grid-cols-3 md:grid-cols-5 gap-3">
        {[
          { label: "Aluminio", href: url("materiales/aluminio"), color: "brand-blue" },
          { label: "Cobre", href: url("materiales/cobre"), color: "brand-green" },
          { label: "Bronce", href: url("materiales/bronce"), color: "brand-blue" },
          { label: "Acero Inoxidable", href: url("materiales/acero-inoxidable"), color: "brand-ice" },
          { label: "Fierro", href: url("materiales/fierro"), color: "brand-ice" },
        ].map((mat) => (
          <a
            href={mat.href}
            class="flex items-center justify-center gap-2 px-4 py-3 backdrop-blur-md bg-white/5 border border-white/10 rounded-xl text-sm font-semibold text-white hover:bg-white/10 hover:border-white/20 transition-all duration-200"
          >
            {mat.label}
            <svg class="w-4 h-4 text-slate-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
            </svg>
          </a>
        ))}
      </div>
    </div>
  </section>

  <SectionCTA />
</Layout>
