---
import Layout from "@/layouts/Layout.astro";
import { SITE } from "@/utils/seo";
import { createGeneralWhatsAppLink } from "@/utils/whatsapp";

const waLink = createGeneralWhatsAppLink();
---

<Layout
  seo={{
    title: "Contacto — Exportandes | Concepción, Biobío",
    description: "Contacta a Exportandes para vender tu chatarra. WhatsApp, teléfono y sede física en Concepción.",
    keywords: ["contacto Exportandes", "vender chatarra Concepción", "teléfono Exportandes"],
  }}
>
  <!-- Header -->
  <section class="relative pt-32 pb-16">
    <div class="absolute inset-0">
      <img
        src="https://images.unsplash.com/photo-1423666639041-f56000c27a9a?w=1920&q=40&auto=format"
        alt=""
        class="w-full h-full object-cover opacity-15"
        loading="eager"
      />
      <div class="absolute inset-0 bg-gradient-to-b from-slate-950 via-slate-950/95 to-slate-950"></div>
    </div>
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="font-display font-extrabold text-4xl sm:text-5xl md:text-6xl text-white">
        Contáctanos
      </h1>
      <p class="mt-6 text-xl text-slate-400 max-w-2xl mx-auto">
        Estamos listos para ayudarte. Escríbenos por WhatsApp o visítanos en nuestra sede.
      </p>
    </div>
  </section>

  <!-- Contact options -->
  <section class="relative pb-24">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <!-- WhatsApp card -->
        <a
          href={waLink}
          target="_blank"
          rel="noopener noreferrer"
          class="group backdrop-blur-md bg-white/5 border border-white/10 rounded-2xl p-8 hover:bg-brand-green/5 hover:border-brand-green/20 transition-all duration-300"
        >
          <div class="w-14 h-14 mb-6 rounded-xl bg-brand-green/10 border border-brand-green/20 flex items-center justify-center group-hover:bg-brand-green/20 transition-colors">
            <svg class="w-7 h-7 text-brand-green" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347z"/>
            </svg>
          </div>
          <h2 class="font-display font-bold text-2xl text-white mb-2">WhatsApp</h2>
          <p class="text-slate-400 mb-4">La forma más rápida. Respuesta en menos de 2 horas.</p>
          <span class="text-brand-green font-semibold text-lg">{SITE.phone}</span>
        </a>

        <!-- Phone card -->
        <a
          href={`tel:${SITE.phone}`}
          class="group backdrop-blur-md bg-white/5 border border-white/10 rounded-2xl p-8 hover:bg-brand-blue/5 hover:border-brand-blue/20 transition-all duration-300"
        >
          <div class="w-14 h-14 mb-6 rounded-xl bg-brand-blue/10 border border-brand-blue/20 flex items-center justify-center group-hover:bg-brand-blue/20 transition-colors">
            <svg class="w-7 h-7 text-brand-blue" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
            </svg>
          </div>
          <h2 class="font-display font-bold text-2xl text-white mb-2">Teléfono</h2>
          <p class="text-slate-400 mb-4">Llámanos en horario hábil.</p>
          <span class="text-brand-blue font-semibold text-lg">{SITE.phone}</span>
        </a>

        <!-- Email card -->
        <a
          href={`mailto:${SITE.email}`}
          class="group backdrop-blur-md bg-white/5 border border-white/10 rounded-2xl p-8 hover:bg-white/[0.07] hover:border-white/15 transition-all duration-300"
        >
          <div class="w-14 h-14 mb-6 rounded-xl bg-white/5 border border-white/10 flex items-center justify-center group-hover:bg-white/10 transition-colors">
            <svg class="w-7 h-7 text-brand-ice" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
            </svg>
          </div>
          <h2 class="font-display font-bold text-2xl text-white mb-2">Email</h2>
          <p class="text-slate-400 mb-4">Para consultas detalladas y documentación.</p>
          <span class="text-brand-ice font-semibold">{SITE.email}</span>
        </a>

        <!-- Address card -->
        <div class="backdrop-blur-md bg-white/5 border border-white/10 rounded-2xl p-8">
          <div class="w-14 h-14 mb-6 rounded-xl bg-white/5 border border-white/10 flex items-center justify-center">
            <svg class="w-7 h-7 text-brand-ice" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 0115 0z" />
            </svg>
          </div>
          <h2 class="font-display font-bold text-2xl text-white mb-2">Sede</h2>
          <p class="text-slate-400 mb-2">{SITE.address.street}</p>
          <p class="text-slate-400 mb-4">{SITE.address.city}, {SITE.address.region}</p>
          <p class="text-sm text-slate-500">Lun-Vie: 08:30 - 18:00 | Sáb: 09:00 - 13:00</p>
        </div>
      </div>
    </div>
  </section>
</Layout>
