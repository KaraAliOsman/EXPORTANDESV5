---
import Layout from "@/layouts/Layout.astro";
import prices from "@/data/prices.json";
import locations from "@/data/locations.json";
---

<Layout
  seo={{
    title: "Vender Chatarra Ahora | Cotiza por WhatsApp — Exportandes",
    description: "Vendé tu cobre, aluminio y chatarra ahora. Seleccioná el material, cantidad y comuna. Cotización instantánea por WhatsApp.",
    keywords: ["vender chatarra", "cotizar chatarra WhatsApp", "vender cobre online"],
  }}
>
  <section class="relative min-h-screen pt-24 pb-16">
    <!-- Background -->
    <div class="absolute inset-0">
      <img
        src="https://images.unsplash.com/photo-1565193566173-7a0ee3dbe261?w=1920&q=40&auto=format"
        alt=""
        class="w-full h-full object-cover opacity-20"
        loading="eager"
      />
      <div class="absolute inset-0 bg-gradient-to-b from-slate-950 via-slate-950/95 to-slate-950"></div>
    </div>

    <div class="relative max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Header -->
      <div class="text-center mb-12">
        <span class="inline-block px-4 py-1.5 mb-4 text-xs font-semibold tracking-widest uppercase text-brand-green bg-brand-green/10 border border-brand-green/20 rounded-full">
          Respuesta en menos de 2 horas
        </span>
        <h1 class="font-display font-extrabold text-4xl sm:text-5xl text-white">
          Vender ahora
        </h1>
        <p class="mt-4 text-lg text-slate-400">
          Selecciona tu material, indica la cantidad y envíanos un mensaje. Es así de fácil.
        </p>
      </div>

      <!-- Progressive Form -->
      <div class="backdrop-blur-md bg-white/5 border border-white/10 rounded-2xl shadow-2xl p-8 md:p-10">
        <form id="sell-form" class="space-y-8">
          <!-- Step 1: Material -->
          <div id="step-1">
            <label class="block mb-3">
              <span class="text-sm font-semibold text-brand-ice tracking-wide uppercase">1. ¿Qué material quieres vender?</span>
            </label>
            <div class="grid grid-cols-2 sm:grid-cols-3 gap-3" id="material-grid">
              {prices.map((item) => (
                <button
                  type="button"
                  data-material={item.name}
                  class="material-btn group relative px-4 py-4 rounded-xl border border-white/10 bg-white/5 text-left hover:bg-brand-blue/10 hover:border-brand-blue/30 transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-brand-blue/50"
                >
                  <span class="block text-sm font-semibold text-white group-hover:text-brand-blue transition-colors">
                    {item.name.split("(")[0].trim()}
                  </span>
                  <span class="block text-xs text-slate-500 mt-1">
                    ${item.price.toLocaleString("es-CL")}/kg
                  </span>
                </button>
              ))}
            </div>
          </div>

          <!-- Step 2: Quantity -->
          <div id="step-2" class="hidden">
            <label for="quantity" class="block mb-3">
              <span class="text-sm font-semibold text-brand-ice tracking-wide uppercase">2. ¿Cuánto tienes aproximadamente?</span>
            </label>
            <div class="grid grid-cols-2 sm:grid-cols-4 gap-3" id="quantity-grid">
              {["1-10 kg", "10-50 kg", "50-200 kg", "+200 kg"].map((q) => (
                <button
                  type="button"
                  data-quantity={q}
                  class="quantity-btn px-4 py-3 rounded-xl border border-white/10 bg-white/5 text-sm font-medium text-white hover:bg-brand-blue/10 hover:border-brand-blue/30 transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-brand-blue/50"
                >
                  {q}
                </button>
              ))}
            </div>
          </div>

          <!-- Step 3: Location -->
          <div id="step-3" class="hidden">
            <label for="location" class="block mb-3">
              <span class="text-sm font-semibold text-brand-ice tracking-wide uppercase">3. ¿En qué comuna estás?</span>
            </label>
            <select
              id="location-select"
              class="w-full px-4 py-3.5 rounded-xl border border-white/10 bg-white/5 text-white text-sm backdrop-blur-md focus:outline-none focus:ring-2 focus:ring-brand-blue/50 focus:border-brand-blue/30 appearance-none cursor-pointer"
            >
              <option value="" disabled selected>Selecciona tu comuna</option>
              {locations.map((loc) => (
                <option value={loc.name} class="bg-slate-900 text-white">{loc.name}</option>
              ))}
              <option value="Otra" class="bg-slate-900 text-white">Otra comuna</option>
            </select>
          </div>

          <!-- Step 4: Submit -->
          <div id="step-4" class="hidden">
            <div class="border-t border-white/10 pt-6">
              <!-- Summary -->
              <div class="mb-6 p-4 rounded-xl bg-brand-green/5 border border-brand-green/20">
                <p class="text-sm text-slate-400 mb-2">Resumen de tu cotización:</p>
                <p class="text-white font-semibold" id="summary-text">—</p>
              </div>

              <a
                id="whatsapp-link"
                href="#"
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center justify-center gap-3 w-full px-8 py-4 bg-brand-green hover:bg-brand-green/90 text-white font-bold text-lg rounded-full transition-all duration-200 hover:shadow-2xl hover:shadow-brand-green/30 hover:scale-[1.01]"
              >
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347z"/>
                  <path d="M12 0C5.373 0 0 5.373 0 12c0 2.625.846 5.059 2.284 7.034L.789 23.492a.5.5 0 00.611.611l4.458-1.495A11.952 11.952 0 0012 24c6.627 0 12-5.373 12-12S18.627 0 12 0zm0 22c-2.387 0-4.592-.838-6.316-2.234l-.44-.362-2.96.992.992-2.96-.362-.44A9.953 9.953 0 012 12C2 6.477 6.477 2 12 2s10 4.477 10 10-4.477 10-10 10z"/>
                </svg>
                Vender por WhatsApp
              </a>

              <p class="mt-4 text-center text-sm text-slate-500">
                Respuesta garantizada en menos de 2 horas hábiles.
              </p>
            </div>
          </div>
        </form>
      </div>

      <!-- Trust signals -->
      <div class="mt-8 grid grid-cols-3 gap-4 text-center">
        {[
          { label: "Pago inmediato", icon: "M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" },
          { label: "Retiro gratis", icon: "M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" },
          { label: "Sin compromiso", icon: "M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" },
        ].map((item) => (
          <div class="flex flex-col items-center gap-2">
            <svg class="w-6 h-6 text-brand-green" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d={item.icon} />
            </svg>
            <span class="text-xs text-slate-400">{item.label}</span>
          </div>
        ))}
      </div>
    </div>
  </section>
</Layout>

<script>
  const PHONE = "56933301114";
  let selectedMaterial = "";
  let selectedQuantity = "";
  let selectedLocation = "";

  // Material selection
  document.querySelectorAll(".material-btn").forEach((btn) => {
    btn.addEventListener("click", () => {
      document.querySelectorAll(".material-btn").forEach((b) => {
        b.classList.remove("!bg-brand-blue/20", "!border-brand-blue/50", "ring-2", "ring-brand-blue/30");
      });
      btn.classList.add("!bg-brand-blue/20", "!border-brand-blue/50", "ring-2", "ring-brand-blue/30");
      selectedMaterial = (btn as HTMLElement).dataset.material || "";
      showStep(2);
    });
  });

  // Quantity selection
  document.querySelectorAll(".quantity-btn").forEach((btn) => {
    btn.addEventListener("click", () => {
      document.querySelectorAll(".quantity-btn").forEach((b) => {
        b.classList.remove("!bg-brand-blue/20", "!border-brand-blue/50", "ring-2", "ring-brand-blue/30");
      });
      btn.classList.add("!bg-brand-blue/20", "!border-brand-blue/50", "ring-2", "ring-brand-blue/30");
      selectedQuantity = (btn as HTMLElement).dataset.quantity || "";
      showStep(3);
    });
  });

  // Location selection
  const locationSelect = document.getElementById("location-select") as HTMLSelectElement;
  if (locationSelect) {
    locationSelect.addEventListener("change", () => {
      selectedLocation = locationSelect.value;
      updateSummary();
      showStep(4);
    });
  }

  function showStep(step: number) {
    const el = document.getElementById(`step-${step}`);
    if (el) {
      el.classList.remove("hidden");
      el.scrollIntoView({ behavior: "smooth", block: "center" });
    }
  }

  function updateSummary() {
    const summary = document.getElementById("summary-text");
    const waLink = document.getElementById("whatsapp-link") as HTMLAnchorElement;
    if (summary) {
      summary.textContent = `${selectedMaterial} — ${selectedQuantity} — ${selectedLocation}`;
    }
    if (waLink) {
      const text = `Hola Exportandes, quiero vender ${selectedMaterial} (${selectedQuantity}) en ${selectedLocation}. Solicito cotización.`;
      waLink.href = `https://wa.me/${PHONE}?text=${encodeURIComponent(text)}`;
    }
  }
</script>
