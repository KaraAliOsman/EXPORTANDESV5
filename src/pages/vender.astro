---
import Layout from "@/layouts/Layout.astro";
import priceData from "@/data/prices.json";
import locations from "@/data/locations.json";
import { url } from "@/utils/paths";

// Flatten all materials for the form
const allItems = priceData.categories.flatMap((c) => c.items).filter((i) => !("consultPrice" in i && i.consultPrice));
---

<Layout
  seo={{
    title: "Vender Chatarra Ahora | Cotiza por WhatsApp — Exportandes",
    description: "Vendé tu cobre, aluminio y chatarra ahora. Seleccioná el material, cantidad y comuna. Cotización instantánea por WhatsApp.",
    keywords: ["vender chatarra", "cotizar chatarra WhatsApp", "vender cobre online"],
  }}
>
  <section class="relative min-h-screen pt-24 pb-16 bg-gray-50">
    <div class="relative max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Header -->
      <div class="text-center mb-10 sm:mb-12">
        <span class="inline-block px-3 py-1 sm:px-4 sm:py-1.5 mb-4 text-xs font-semibold tracking-widest uppercase text-green-600 bg-green-50 border border-green-200 rounded-full">
          Respuesta en menos de 2 horas
        </span>
        <h1 class="font-display font-extrabold text-3xl sm:text-5xl text-gray-900">
          Vender ahora
        </h1>
        <p class="mt-3 sm:mt-4 text-sm sm:text-lg text-gray-500">
          Selecciona tu material, indica la cantidad y envíanos un mensaje. Es así de fácil.
        </p>
      </div>

      <!-- Progressive Form -->
      <div class="bg-white border border-gray-200 rounded-2xl shadow-lg p-6 sm:p-8 md:p-10">
        <form id="sell-form" class="space-y-6 sm:space-y-8">
          <!-- Step 1: Material -->
          <div id="step-1">
            <label class="block mb-3">
              <span class="text-xs sm:text-sm font-semibold text-gray-500 tracking-wide uppercase">1. ¿Qué material quieres vender?</span>
            </label>
            <div class="grid grid-cols-2 sm:grid-cols-3 gap-2 sm:gap-3" id="material-grid">
              {allItems.map((item) => (
                <button
                  type="button"
                  data-material={item.name}
                  class="material-btn group relative px-3 py-3 sm:px-4 sm:py-4 rounded-xl border border-gray-200 bg-white text-left hover:bg-blue-50 hover:border-blue-300 transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-blue-300"
                >
                  <span class="block text-xs sm:text-sm font-semibold text-gray-900 group-hover:text-blue-600 transition-colors">
                    {item.name}
                  </span>
                  <span class="block text-[10px] sm:text-xs text-gray-400 mt-0.5">
                    ${item.price.toLocaleString("es-CL")}/kg
                  </span>
                </button>
              ))}
            </div>
          </div>

          <!-- Step 2: Quantity -->
          <div id="step-2" class="hidden">
            <label for="quantity" class="block mb-3">
              <span class="text-xs sm:text-sm font-semibold text-gray-500 tracking-wide uppercase">2. ¿Cuánto tienes aproximadamente?</span>
            </label>
            <div class="grid grid-cols-2 sm:grid-cols-4 gap-2 sm:gap-3" id="quantity-grid">
              {["1-10 kg", "10-50 kg", "50-200 kg", "+200 kg"].map((q) => (
                <button
                  type="button"
                  data-quantity={q}
                  class="quantity-btn px-3 py-2.5 sm:px-4 sm:py-3 rounded-xl border border-gray-200 bg-white text-xs sm:text-sm font-medium text-gray-900 hover:bg-blue-50 hover:border-blue-300 transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-blue-300"
                >
                  {q}
                </button>
              ))}
            </div>
          </div>

          <!-- Step 3: Location -->
          <div id="step-3" class="hidden">
            <label for="location" class="block mb-3">
              <span class="text-xs sm:text-sm font-semibold text-gray-500 tracking-wide uppercase">3. ¿En qué comuna estás?</span>
            </label>
            <select
              id="location-select"
              class="w-full px-4 py-3 sm:py-3.5 rounded-xl border border-gray-200 bg-white text-gray-900 text-sm focus:outline-none focus:ring-2 focus:ring-blue-300 focus:border-blue-300 appearance-none cursor-pointer"
            >
              <option value="" disabled selected>Selecciona tu comuna</option>
              {locations.map((loc) => (
                <option value={loc.name}>{loc.name}</option>
              ))}
              <option value="Otra">Otra comuna</option>
            </select>
          </div>

          <!-- Step 4: Submit -->
          <div id="step-4" class="hidden">
            <div class="border-t border-gray-200 pt-6">
              <!-- Summary -->
              <div class="mb-5 sm:mb-6 p-4 rounded-xl bg-green-50 border border-green-200">
                <p class="text-xs sm:text-sm text-gray-500 mb-1.5">Resumen de tu cotización:</p>
                <p class="text-sm sm:text-base text-gray-900 font-semibold" id="summary-text">—</p>
              </div>

              <a
                id="whatsapp-link"
                href="#"
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center justify-center gap-2 sm:gap-3 w-full px-6 py-3.5 sm:px-8 sm:py-4 bg-green-600 hover:bg-green-700 text-white font-bold text-base sm:text-lg rounded-lg transition-all duration-200 hover:shadow-lg"
              >
                <svg class="w-5 h-5 sm:w-6 sm:h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347z"/>
                  <path d="M12 0C5.373 0 0 5.373 0 12c0 2.625.846 5.059 2.284 7.034L.789 23.492a.5.5 0 00.611.611l4.458-1.495A11.952 11.952 0 0012 24c6.627 0 12-5.373 12-12S18.627 0 12 0zm0 22c-2.387 0-4.592-.838-6.316-2.234l-.44-.362-2.96.992.992-2.96-.362-.44A9.953 9.953 0 012 12C2 6.477 6.477 2 12 2s10 4.477 10 10-4.477 10-10 10z"/>
                </svg>
                Vender por WhatsApp
              </a>

              <p class="mt-3 sm:mt-4 text-center text-xs sm:text-sm text-gray-400">
                Respuesta garantizada en menos de 2 horas hábiles.
              </p>
            </div>
          </div>
        </form>
      </div>

      <!-- Trust signals -->
      <div class="mt-6 sm:mt-8 grid grid-cols-3 gap-3 sm:gap-4 text-center">
        {[
          { label: "Pago inmediato", icon: "M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" },
          { label: "Retiro gratis", icon: "M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" },
          { label: "Sin compromiso", icon: "M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" },
        ].map((item) => (
          <div class="flex flex-col items-center gap-1.5 sm:gap-2">
            <svg class="w-5 h-5 sm:w-6 sm:h-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d={item.icon} />
            </svg>
            <span class="text-[10px] sm:text-xs text-gray-500">{item.label}</span>
          </div>
        ))}
      </div>
    </div>
  </section>
</Layout>

<script>
  const PHONE = "56933301114";
  let selectedMaterial = "";
  let selectedQuantity = "";
  let selectedLocation = "";

  document.querySelectorAll(".material-btn").forEach((btn) => {
    btn.addEventListener("click", () => {
      document.querySelectorAll(".material-btn").forEach((b) => {
        b.classList.remove("!bg-blue-50", "!border-blue-400", "ring-2", "ring-blue-200");
      });
      btn.classList.add("!bg-blue-50", "!border-blue-400", "ring-2", "ring-blue-200");
      selectedMaterial = (btn as HTMLElement).dataset.material || "";
      showStep(2);
    });
  });

  document.querySelectorAll(".quantity-btn").forEach((btn) => {
    btn.addEventListener("click", () => {
      document.querySelectorAll(".quantity-btn").forEach((b) => {
        b.classList.remove("!bg-blue-50", "!border-blue-400", "ring-2", "ring-blue-200");
      });
      btn.classList.add("!bg-blue-50", "!border-blue-400", "ring-2", "ring-blue-200");
      selectedQuantity = (btn as HTMLElement).dataset.quantity || "";
      showStep(3);
    });
  });

  const locationSelect = document.getElementById("location-select") as HTMLSelectElement;
  if (locationSelect) {
    locationSelect.addEventListener("change", () => {
      selectedLocation = locationSelect.value;
      updateSummary();
      showStep(4);
    });
  }

  function showStep(step: number) {
    const el = document.getElementById(`step-${step}`);
    if (el) {
      el.classList.remove("hidden");
      el.scrollIntoView({ behavior: "smooth", block: "center" });
    }
  }

  function updateSummary() {
    const summary = document.getElementById("summary-text");
    const waLink = document.getElementById("whatsapp-link") as HTMLAnchorElement;
    if (summary) {
      summary.textContent = `${selectedMaterial} — ${selectedQuantity} — ${selectedLocation}`;
    }
    if (waLink) {
      const text = `Hola Exportandes, quiero vender ${selectedMaterial} (${selectedQuantity}) en ${selectedLocation}. Solicito cotización.`;
      waLink.href = `https://wa.me/${PHONE}?text=${encodeURIComponent(text)}`;
    }
  }
</script>
