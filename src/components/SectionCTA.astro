---
import { createGeneralWhatsAppLink } from "@/utils/whatsapp";
const waLink = createGeneralWhatsAppLink();
---

<section class="relative py-24 overflow-hidden">
  <!-- Background -->
  <div class="absolute inset-0">
    <img
      src="https://images.unsplash.com/photo-1587293852726-70cdb56c2866?w=1920&q=60&auto=format"
      alt=""
      class="w-full h-full object-cover"
      loading="lazy"
    />
    <div class="absolute inset-0 bg-gradient-to-r from-brand-blue/90 via-brand-blue/80 to-brand-blue/70"></div>
    <div class="absolute inset-0 bg-gradient-to-t from-slate-950/40 via-transparent to-slate-950/20"></div>
  </div>

  <div class="relative max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h2 class="font-display font-extrabold text-3xl sm:text-4xl md:text-5xl text-white leading-tight">
      ¿Tienes chatarra para vender?
    </h2>
    <p class="mt-6 text-xl text-white/80 max-w-2xl mx-auto">
      Cotiza en menos de 2 minutos. Respondemos por WhatsApp en horario hábil.
    </p>
    <div class="mt-10 flex flex-col sm:flex-row items-center justify-center gap-4">
      <a
        href="/vender"
        class="inline-flex items-center gap-2 px-8 py-4 bg-white text-slate-900 font-bold text-lg rounded-full hover:bg-white/90 transition-all duration-200 hover:scale-[1.02] shadow-2xl"
      >
        Cotizar ahora
        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
        </svg>
      </a>
      <a
        href={waLink}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 px-8 py-4 bg-white/10 border border-white/20 backdrop-blur text-white font-semibold text-lg rounded-full hover:bg-white/20 transition-all duration-200"
      >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347z"/>
        </svg>
        WhatsApp directo
      </a>
    </div>
  </div>
</section>
