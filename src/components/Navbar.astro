---
import { createGeneralWhatsAppLink } from "@/utils/whatsapp";
import { url, asset } from "@/utils/paths";
const waLink = createGeneralWhatsAppLink();
const links = [
  { label: "Inicio", href: url("/") },
  { label: "Vender", href: url("vender") },
  { label: "Tarifas", href: url("tarifas") },
  { label: "Zonas", href: url("zonas") },
  { label: "Nosotros", href: url("nosotros") },
  { label: "Blog", href: url("blog") },
];
---

<nav id="navbar" class="fixed top-0 left-0 right-0 z-50 transition-all duration-300 bg-black/25 backdrop-blur-md">
  <div class="max-w-7xl mx-auto px-5 sm:px-8">
    <div class="flex items-center justify-between h-16 lg:h-[72px]">
      <a href={url("/")} class="flex flex-col items-start nav-logo-wrap" aria-label="Exportandes">
        <img src={asset("logo.png")} alt="Exportandes" class="h-7 sm:h-8 object-contain nav-logo" />
        <span class="text-[9px] tracking-wider mt-0.5 nav-byline">by Aluwe &amp; Ingotsan</span>
      </a>

      <div class="hidden lg:flex items-center gap-7">
        {links.map((l) => (
          <a href={l.href} class="text-[13px] font-medium text-white/95 hover:text-white transition-colors nav-link">{l.label}</a>
        ))}
      </div>

      <div class="flex items-center gap-3">
        <a href={waLink} target="_blank" rel="noopener noreferrer"
           class="nav-cta hidden sm:inline-flex items-center gap-2 px-5 py-2.5 bg-green-600 hover:bg-green-700 text-white text-sm font-semibold rounded-lg transition-colors">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347z"/></svg>
          WhatsApp
        </a>
        <button id="mobile-menu-btn" class="lg:hidden p-2 text-white/90 nav-menu-btn" aria-label="Menu">
          <svg id="menu-open" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M3.75 9h16.5m-16.5 6.75h16.5"/></svg>
          <svg id="menu-close" class="w-6 h-6 hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"/></svg>
        </button>
      </div>
    </div>
  </div>

  <div id="mobile-menu" class="lg:hidden hidden absolute top-full left-0 right-0 bg-white border-b border-gray-100 shadow-lg">
    <div class="px-5 py-4 space-y-1">
      {links.map((l) => (
        <a href={l.href} class="block px-3 py-2.5 text-base text-gray-600 hover:text-gray-900 hover:bg-gray-50 rounded-lg">{l.label}</a>
      ))}
      <div class="pt-3 border-t border-gray-100">
        <a href={waLink} target="_blank" rel="noopener noreferrer" class="flex items-center justify-center gap-2 w-full py-3 bg-green-600 text-white font-semibold rounded-lg">
          Contactar por WhatsApp
        </a>
      </div>
    </div>
  </div>
</nav>

<script>
  const btn = document.getElementById("mobile-menu-btn"), menu = document.getElementById("mobile-menu"), o = document.getElementById("menu-open"), c = document.getElementById("menu-close");
  if (btn && menu && o && c) btn.addEventListener("click", () => { menu.classList.toggle("hidden"); o.classList.toggle("hidden"); c.classList.toggle("hidden"); });
</script>
