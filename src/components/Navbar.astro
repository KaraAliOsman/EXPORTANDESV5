---
import { createGeneralWhatsAppLink } from "@/utils/whatsapp";
import { url, asset } from "@/utils/paths";

const waLink = createGeneralWhatsAppLink();
const navLinks = [
  { label: "Inicio", href: url("/") },
  { label: "Vender", href: url("vender") },
  { label: "Tarifas", href: url("tarifas") },
  { label: "Zonas", href: url("zonas") },
  { label: "Nosotros", href: url("nosotros") },
  { label: "Blog", href: url("blog") },
];
---

<nav id="navbar" class="fixed top-0 left-0 right-0 z-50 transition-all duration-500" aria-label="Navegación principal">
  <div class="max-w-7xl mx-auto px-5 sm:px-8">
    <div class="flex items-center justify-between h-16 lg:h-[72px]">
      <!-- Logo -->
      <a href={url("/")} class="block" aria-label="Exportandes - Inicio">
        <img src={asset("logo-symbol.png")} alt="Exportandes" class="h-8 sm:hidden object-contain" />
        <img src={asset("logo.png")} alt="Exportandes" class="h-7 hidden sm:block object-contain brightness-0 invert" />
      </a>

      <!-- Desktop -->
      <div class="hidden lg:flex items-center gap-8">
        {navLinks.map((link) => (
          <a href={link.href} class="text-[13px] font-medium text-white/60 hover:text-white tracking-wide uppercase transition-colors duration-300">
            {link.label}
          </a>
        ))}
      </div>

      <!-- CTA + Menu -->
      <div class="flex items-center gap-4">
        <a
          href={waLink}
          target="_blank"
          rel="noopener noreferrer"
          class="hidden sm:inline-flex items-center gap-2 px-5 py-2 bg-white text-black text-[13px] font-semibold tracking-wide uppercase rounded-none hover:bg-white/90 transition-colors"
        >
          WhatsApp
          <svg class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M4.5 19.5l15-15m0 0H8.25m11.25 0v11.25" /></svg>
        </a>

        <button id="mobile-menu-btn" class="lg:hidden p-2 text-white/60 hover:text-white" aria-label="Menú" aria-expanded="false">
          <svg id="menu-open" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M3.75 9h16.5m-16.5 6.75h16.5" /></svg>
          <svg id="menu-close" class="w-6 h-6 hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" /></svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="lg:hidden hidden fixed inset-0 top-16 bg-[#0a0a0a] z-40">
    <div class="flex flex-col px-6 py-8 gap-1">
      {navLinks.map((link) => (
        <a href={link.href} class="block py-3 text-2xl font-light text-white/70 hover:text-white border-b border-white/5 transition-colors">
          {link.label}
        </a>
      ))}
      <a href={waLink} target="_blank" rel="noopener noreferrer"
         class="mt-6 flex items-center justify-center gap-2 py-4 bg-white text-black font-semibold text-sm uppercase tracking-wide">
        Contactar por WhatsApp
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M4.5 19.5l15-15m0 0H8.25m11.25 0v11.25" /></svg>
      </a>
    </div>
  </div>
</nav>

<script>
  const btn = document.getElementById("mobile-menu-btn");
  const menu = document.getElementById("mobile-menu");
  const iconO = document.getElementById("menu-open");
  const iconC = document.getElementById("menu-close");
  if (btn && menu && iconO && iconC) {
    btn.addEventListener("click", () => {
      const open = menu.classList.contains("hidden");
      menu.classList.toggle("hidden");
      iconO.classList.toggle("hidden");
      iconC.classList.toggle("hidden");
      document.body.style.overflow = open ? "hidden" : "";
      btn.setAttribute("aria-expanded", String(open));
    });
  }
</script>
