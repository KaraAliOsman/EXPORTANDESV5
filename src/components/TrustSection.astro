  </div>

  <div class="relative max-w-7xl mx-auto px-5 sm:px-8 py-20 sm:py-32">
    <div class="max-w-md mb-12 sm:mb-16">
      <p class="text-xs font-medium tracking-[0.25em] uppercase text-white/40 mb-3">Nuestra promesa</p>
      <h2 class="font-sans font-black text-3xl sm:text-5xl text-white leading-[1.05]">
        Confianza en cada kilo
      </h2>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-px bg-white/10">
      {benefits.map((b) => (
        <div class="bg-[#0a0a0a]/70 backdrop-blur-sm p-6 sm:p-10">
          <h3 class="text-lg sm:text-xl font-bold text-white mb-2">{b.title}</h3>
          <p class="text-sm text-white/50 leading-relaxed">{b.desc}</p>
        </div>
      ))}
    </div>
  </div>
</section>
