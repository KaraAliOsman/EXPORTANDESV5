<section class="relative py-24 overflow-hidden">
  <!-- Background -->
  <div class="absolute inset-0">
    <img
      src="https://images.unsplash.com/photo-1565193566173-7a0ee3dbe261?w=1920&q=60&auto=format"
      alt=""
      class="w-full h-full object-cover opacity-25"
      loading="lazy"
    />
    <div class="absolute inset-0 bg-gradient-to-b from-slate-950/80 via-slate-950/85 to-slate-950"></div>
  </div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-16">
      <span class="inline-block px-4 py-1.5 mb-4 text-xs font-semibold tracking-widest uppercase text-brand-green bg-brand-green/10 border border-brand-green/20 rounded-full">
        ¿Por qué elegirnos?
      </span>
      <h2 class="font-display font-extrabold text-3xl sm:text-4xl md:text-5xl text-white">
        Confianza en cada kilo
      </h2>
    </div>

    <!-- Grid: asymmetric 2+2 layout -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      {benefits.map((benefit, i) => (
        <div
          class:list={[
            "group backdrop-blur-md bg-white/5 border border-white/10 rounded-2xl p-8 hover:bg-white/[0.07] hover:border-white/15 transition-all duration-300",
            i === 0 && "md:row-span-1",
          ]}
        >
          <div class="w-12 h-12 mb-6 rounded-xl bg-brand-blue/10 border border-brand-blue/20 flex items-center justify-center group-hover:bg-brand-blue/20 transition-colors">
            <svg class="w-6 h-6 text-brand-blue" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d={iconPaths[benefit.icon]} />
            </svg>
          </div>
          <h3 class="font-display font-bold text-xl text-white mb-3">{benefit.title}</h3>
          <p class="text-slate-400 leading-relaxed">{benefit.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
