---
import { url } from "@/utils/paths";

const steps = [
  { num: "01", title: "Cotiza", desc: "Envianos un WhatsApp con el material y cantidad. Respuesta en menos de 2 horas." },
  { num: "02", title: "Retiro", desc: "Retiramos a domicilio gratis o recibimos en nuestra sede." },
  { num: "03", title: "Pesaje", desc: "Balanza certificada. Proceso transparente frente a ti." },
  { num: "04", title: "Pago", desc: "Transferencia o efectivo al instante. Sin demoras." },
];
---

<section class="relative bg-[#0a0a0a] py-20 sm:py-32 overflow-hidden">
  <div class="max-w-7xl mx-auto px-5 sm:px-8">
    <div class="max-w-md mb-12 sm:mb-20">
      <p class="text-xs font-medium tracking-[0.25em] uppercase text-white/40 mb-3">Proceso</p>
      <h2 class="font-sans font-black text-3xl sm:text-5xl text-white leading-[1.05]">
        Vender en 4 pasos
      </h2>
    </div>

    <!-- Simple horizontal grid, stacks vertically on mobile -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8 sm:gap-6">
      {steps.map((s) => (
        <div class="relative">
          <span class="block text-6xl sm:text-7xl font-black text-white/[0.04] leading-none mb-3 select-none">{s.num}</span>
          <h3 class="text-lg font-bold text-white mb-2 -mt-4">{s.title}</h3>
          <p class="text-sm text-white/40 leading-relaxed">{s.desc}</p>
        </div>
      ))}
    </div>

    <div class="mt-12 sm:mt-16">
      <a href={url("vender")} class="inline-flex items-center gap-3 px-7 py-3.5 bg-white text-black font-semibold text-sm uppercase tracking-wide hover:bg-white/90 transition-colors">
        Empezar ahora
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M4.5 19.5l15-15m0 0H8.25m11.25 0v11.25" /></svg>
      </a>
    </div>
  </div>
</section>
