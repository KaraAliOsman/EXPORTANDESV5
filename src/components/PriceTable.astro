---
import priceData from "@/data/prices.json";
import { createWhatsAppLink, formatPrice, getTrendIcon } from "@/utils/whatsapp";

// Get featured items
const allItems = priceData.categories.flatMap((c) => c.items);
const featured = priceData.featured
  .map((id) => allItems.find((item) => item.id === id))
  .filter(Boolean) as typeof allItems;
---

<section id="precios" class="relative py-20 sm:py-24 overflow-hidden">
  <!-- Background -->
  <div class="absolute inset-0">
    <img
      src="https://images.unsplash.com/photo-1558618666-fcd25c85f82e?w=1920&q=40&auto=format"
      alt=""
      class="w-full h-full object-cover opacity-15"
      loading="lazy"
    />
    <div class="absolute inset-0 bg-gradient-to-b from-slate-950 via-slate-950/90 to-slate-950"></div>
  </div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-10 sm:mb-14">
      <span class="inline-block px-3 py-1 sm:px-4 sm:py-1.5 mb-4 text-xs font-semibold tracking-widest uppercase text-brand-blue bg-brand-blue/10 border border-brand-blue/20 rounded-full">
        Precios actualizados
      </span>
      <h2 class="font-display font-extrabold text-2xl sm:text-4xl md:text-5xl text-white">
        Tarifas por kilo
      </h2>
      <p class="mt-3 sm:mt-4 text-sm sm:text-lg text-slate-400 max-w-2xl mx-auto">
        Precios referenciales. Cotización final según calidad y cantidad.
      </p>
    </div>

    <!-- 3 Featured materials - compact on mobile -->
    <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 sm:gap-6">
      {featured.map((item) => {
        const trend = getTrendIcon(item.trend);
        const waLink = createWhatsAppLink(item.name, "", "Concepción");
        return (
          <div class="group backdrop-blur-md bg-white/5 border border-white/10 rounded-2xl p-5 sm:p-6 hover:bg-white/[0.07] hover:border-white/15 transition-all duration-300">
            <div class="flex items-start justify-between gap-2 mb-2 sm:mb-3">
              <h3 class="font-display font-bold text-base sm:text-xl text-white">{item.name}</h3>
              <span class:list={["inline-flex items-center gap-1 px-2 py-0.5 rounded-full text-xs font-medium", trend.color, "bg-white/5"]}>
                {trend.icon}
              </span>
            </div>
            <p class="text-xs sm:text-sm text-slate-400 mb-3 sm:mb-4 line-clamp-2">{item.description}</p>

            <!-- Price - smaller on mobile -->
            <div class="flex items-baseline gap-1 mb-4 sm:mb-5">
              <span class="text-2xl sm:text-3xl font-extrabold text-white tabular-nums">
                {formatPrice(item.price)}
              </span>
              <span class="text-sm text-slate-400">/{item.unit}</span>
            </div>

            <!-- WhatsApp CTA -->
            <a
              href={waLink}
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-center justify-center gap-2 w-full px-4 py-2.5 sm:py-3 bg-brand-green/10 border border-brand-green/20 text-brand-green hover:bg-brand-green hover:text-white font-semibold text-xs sm:text-sm rounded-xl transition-all duration-200"
            >
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347z"/>
              </svg>
              Cotizar venta
            </a>
          </div>
        );
      })}
    </div>

    <!-- Ver todos los precios link -->
    <div class="text-center mt-8 sm:mt-10">
      <a
        href="/tarifas"
        class="inline-flex items-center gap-2 px-6 py-3 sm:px-8 sm:py-4 backdrop-blur-md bg-white/5 border border-white/10 text-white font-semibold text-sm sm:text-base rounded-full hover:bg-white/10 transition-all duration-200"
      >
        Ver todos los precios
        <svg class="w-4 h-4 sm:w-5 sm:h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
        </svg>
      </a>
    </div>

    <!-- Disclaimer -->
    <p class="mt-5 sm:mt-6 text-center text-xs text-slate-500">
      * Precios referenciales en pesos chilenos (CLP). Última actualización: {priceData.lastUpdated}.
    </p>
  </div>
</section>
