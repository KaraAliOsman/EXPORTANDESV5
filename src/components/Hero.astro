---
import { url } from "@/utils/paths";
interface Props { title: string; subtitle: string; ctaText?: string; ctaHref?: string; image?: string; }
const { title, subtitle, ctaText = "Cotizar ahora", ctaHref = url("vender"), image = "https://images.unsplash.com/photo-1504328345606-18bbc8c9d7d1?w=1920&q=80&auto=format" } = Astro.props;
---

<section class="relative min-h-[85vh] sm:min-h-[90vh] flex items-center overflow-hidden">
  <div class="absolute inset-0">
    <img src={image} alt="" class="w-full h-full object-cover" loading="eager" fetchpriority="high" />
    <div class="absolute inset-0 bg-gradient-to-r from-brand-dark/95 via-brand-navy/85 to-brand-navy/40"></div>
  </div>

  <div class="relative z-10 max-w-7xl mx-auto px-5 sm:px-8 py-32 sm:py-40 w-full">
    <div class="max-w-xl">
      <div class="inline-flex items-center gap-2 px-3 py-1 bg-brand-teal/10 border border-brand-teal/30 rounded-full text-xs font-medium text-brand-teal mb-6">
        <span class="w-1.5 h-1.5 bg-brand-teal rounded-full animate-pulse"></span>
        Concepcion &amp; Biobio â€” Retiro a domicilio
      </div>

      <h1 class="text-4xl sm:text-5xl md:text-6xl font-extrabold text-white leading-[1.08] tracking-tight">{title}</h1>
      <p class="mt-5 text-base sm:text-lg text-white/70 max-w-md leading-relaxed">{subtitle}</p>

      <div class="mt-8 flex flex-wrap gap-3">
        <a href={ctaHref} class="inline-flex items-center gap-2 px-6 py-3 bg-brand-teal hover:bg-brand-teal/90 text-white font-semibold rounded-lg transition-colors shadow-lg shadow-brand-teal/25">
          {ctaText}
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3"/></svg>
        </a>
        <a href={url("tarifas")} class="inline-flex items-center gap-2 px-6 py-3 border border-white/25 text-white/90 font-medium rounded-lg hover:bg-white/10 transition-colors">
          Ver tarifas
        </a>
      </div>

      <div class="mt-8 flex flex-wrap gap-5 text-sm text-white/50">
        {["Pago inmediato", "Retiro gratis", "Pesaje certificado"].map((t) => (
          <span class="flex items-center gap-1.5">
            <svg class="w-4 h-4 text-brand-teal" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
            {t}
          </span>
        ))}
      </div>
    </div>
  </div>
</section>
