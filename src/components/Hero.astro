---
import { url } from "@/utils/paths";
interface Props { title: string; subtitle: string; ctaText?: string; ctaHref?: string; image?: string; }
const { title, subtitle, ctaText = "Cotizar ahora", ctaHref = url("vender"), image = "https://images.unsplash.com/photo-1504328345606-18bbc8c9d7d1?w=1920&q=80&auto=format" } = Astro.props;
---

<section class="relative min-h-[85vh] sm:min-h-[90vh] flex items-center overflow-hidden">
  <div class="absolute inset-0">
    <img src={image} alt="" class="w-full h-full object-cover" loading="eager" fetchpriority="high" />
    <div class="absolute inset-0 bg-gradient-to-r from-white/95 via-white/80 to-white/30 sm:from-white/90 sm:via-white/60 sm:to-transparent"></div>
  </div>

  <div class="relative z-10 max-w-7xl mx-auto px-5 sm:px-8 py-32 sm:py-40 w-full">
    <div class="max-w-xl">
      <div class="inline-flex items-center gap-2 px-3 py-1 bg-green-50 border border-green-200 rounded-full text-xs font-medium text-green-700 mb-6">
        <span class="w-1.5 h-1.5 bg-green-500 rounded-full animate-pulse"></span>
        Concepcion &amp; Biobio â€” Retiro a domicilio
      </div>

      <h1 class="text-4xl sm:text-5xl md:text-6xl font-extrabold text-gray-900 leading-[1.08] tracking-tight">{title}</h1>
      <p class="mt-5 text-base sm:text-lg text-gray-600 max-w-md leading-relaxed">{subtitle}</p>

      <div class="mt-8 flex flex-wrap gap-3">
        <a href={ctaHref} class="inline-flex items-center gap-2 px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg transition-colors shadow-lg shadow-blue-600/20">
          {ctaText}
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3"/></svg>
        </a>
        <a href={url("tarifas")} class="inline-flex items-center gap-2 px-6 py-3 bg-white/80 border border-gray-200 text-gray-700 font-medium rounded-lg hover:bg-gray-50 transition-colors">
          Ver tarifas
        </a>
      </div>

      <div class="mt-8 flex flex-wrap gap-5 text-sm text-gray-500">
        {["Pago inmediato", "Retiro gratis", "Pesaje certificado"].map((t) => (
          <span class="flex items-center gap-1.5">
            <svg class="w-4 h-4 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
            {t}
          </span>
        ))}
      </div>
    </div>
  </div>
</section>
